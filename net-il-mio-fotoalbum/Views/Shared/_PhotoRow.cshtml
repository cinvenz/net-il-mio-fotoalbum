@model Photo

@{
    var photo = Model;
}

<tr>
    <td>@photo.Id</td>
    <td class="image"><img class="photo-link-image" src="@photo.Image"></td>
    <td class="title">
        <a href="@Url.Action("Detail", "Photo", new { Id = photo.Id })">@photo.Title</a>
    </td>
    <td class="description">@photo.Description</td>
    <td class="visible">@photo.Visible</td>
    @if (User.IsInRole("Admin"))
    {
        <td class="grid gap">
            <a class="btn btn-success" href="@Url.Action("Update", "Photo", new { Id = photo.Id })">Edit</a>
        </td>
        <td class="grid gap">
            <form asp-action="Delete" asp-controller="Photo" asp-route-id="@photo.Id">
                @Html.AntiForgeryToken()
                <button class="btn btn-danger" type="submit">Delete</button>
            </form>
        </td>
    }
</tr>

        